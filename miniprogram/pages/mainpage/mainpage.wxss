/* miniprogram/pages/mainpage/mainpage.wxss */
.add{
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  width: 200rpx;
  height: 200rpx;
}
.alltap {
  margin: auto 20rpx;
}
.alltap .item{
  background: #fff;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  margin-bottom: 30rpx;
  word-break: break-all;
  word-wrap:break-word;  
  border-radius: 10rpx;
}
.alltap .item .title{
  font-size: 40rpx;
  color: #000;
  margin: auto 20rpx;
  font-weight: bold;
}
.alltap .item .des{
  font-size: 30rpx;
  display: block;
  margin: auto 20rpx;
}
.tt{
  width: 100%;
  text-align: center;
  margin: 20rpx auto;
  font-weight: bold;
  font-size: 46rpx;
}
.addtips{
  position: absolute;
  bottom: 180rpx;
  right: 100rpx;
  color: black;
  transform: rotate(-40deg); 
  -o-transform: rotate(-40deg); 
  -webkit-transform: rotate(-40deg); 
  -moz-transform: rotate(-40deg); 
}